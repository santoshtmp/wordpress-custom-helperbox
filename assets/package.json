{
  "name": "helperbox",
  "version": "1.0.0",
  "description": "helperbox plugin packages",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack --mode development --watch --progress",
    "build": "webpack --mode production --progress",
    "clean": "rm -rf build/*",
    "lint": "eslint src/js/**/*.js src/blocks/**/*.js",
    "lint:fix": "eslint --fix src/js/**/*.js src/blocks/**/*.js",
    "lint-css": "stylelint src/scss/**/*.scss src/blocks/**/*.scss",
    "lint-css:fix": "npm run lint-css -- --fix",
    "format": "prettier --write src/js/**/*.js src/blocks/**/*.js src/scss/**/*.scss src/blocks/**/*.scss",
    "precommit": "npm run lint-css:fix && npm run lint:fix && npm run build"
  },
  "keywords": [
    "helperbox",
    "plugin",
    "wordpress"
  ],
  "author": "santoshtmp7@gmail.com",
  "license": "ISC",
  "browserslist": [
    "defaults"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@wordpress/eslint-plugin": "^23.0.0",
    "autoprefixer": "^10.4.23",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-remove-empty-scripts": "^1.1.1"
  }
}