{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "helperbox/button",
  "title": "Helperbox Button",
  "description": "Custom Helperbox button with link, styles, and alignment",
  "category": "helperbox_blocks",
  "icon": "smiley",
  "keywords": [
    "button",
    "helperbox",
    "cta"
  ],
  "attributes": {
    "text": {
      "type": "string",
      "source": "html",
      "selector": "a",
      "default": "Click me"
    },
    "url": {
      "type": "string",
      "default": ""
    },
    "opensInNewTab": {
      "type": "boolean",
      "default": false
    },
    "linkTarget": {
      "type": "string",
      "default": ""
    },
    "rel": {
      "type": "string",
      "default": ""
    },
    "align": {
      "type": "string",
      "default": "center"
    },
    "buttonText": {
      "type": "string",
      "default": ""
    }
  },
  "supports": {
    "html": false,
    "anchor": true,
    "align": [
      "left",
      "center",
      "right",
      "wide",
      "full"
    ],
    "alignText": true,
    "color": {
      "text": true,
      "background": true,
      "gradients": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "border": {
      "radius": true,
      "color": true,
      "width": true,
      "style": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontStyle": true,
      "__experimentalFontWeight": true,
      "__experimentalTextTransform": true
    }
  },
  "styles": [
    {
      "name": "default",
      "label": "Default",
      "isDefault": true
    },
    {
      "name": "fill",
      "label": "Fill"
    },
    {
      "name": "outline",
      "label": "Outline"
    }
  ],
  "editorScript": "button-edit",
  "editorStyle": "",
  "style": "button-style",
  "viewScript": "button-view"
}